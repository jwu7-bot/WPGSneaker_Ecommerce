<h1>All Products</h1>

<% if @products.any? %>
  <div>
  <% @products.each do |product| %>
    <% if product.stock_quantity > 0 %>
      <div>
        <p><strong><%= link_to product.name, product_path(product) %></strong></p>
      </div>
    <% end %>
  <% end %>
  </div>
  <%= paginate @products %>
<% else %>
  <p>No products available.</p>
<% end %>