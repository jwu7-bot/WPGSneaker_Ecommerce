<aside>
  <% if product.image.attached? %>
    <%= image_tag product.image %>
  <% else %>
    <%= image_tag asset_path('no_image.jpg'), size: "240x300"  %>
  <% end %>
  <h3><%= link_to product.name, product %></h3>
  <p>Price: <%= number_to_currency product.price / 100.0 %></p>
  <p><%= product.description %></p>

  <% if cart.include?(product) %>
    <%= button_to cart_path(product), method: :delete do %>
      Remove from cart
    <% end %>
  <% else %>
    <%= form_with url: cart_index_path(product) do %>
      <%= hidden_field_tag(:id, product.id) %>
      <%= button_tag "Add to cart" %>
    <% end %>
  <% end %>

</aside>